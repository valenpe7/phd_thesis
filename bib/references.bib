issn = {0031899X},
journal = {Physical Review},
month = {jun},
number = {12},
pages = {1912--1925},
publisher = {American Physical Society},
title = {{On the classical radiation of accelerated electrons}},
url = {https://link.aps.org/doi/10.1103/PhysRev.75.1912},
volume = {75},
year = {1949}
