@article{Krushelnick1997,
abstract = {A plasma channel is formed behind a self-guided, subpicosecond, 2 TW laser pulse in a hydrogen gas jet plasma. The channel is produced from the radial expulsion of plasma ions due to charge separation created in the displacement (or cavitation) of plasma electrons by the large ponderomotive force of the laser. Using Thomson scattering diagnostics and mode structure measurements, an intense trailing laser pulse (I∼5×1016 W/cm2) is observed to be guided throughout the length of this channel for about 20 Rayleigh lengths, approximately equal to the propagation length of the self-guided pump laser pulse. {\textcopyright} 1997 The American Physical Society.},
